<h2>Lista de Categorias:</h2>

<hr>
<a href="/admin/categorias/add"><button class="btn btn-success mb-3"> Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mb-3">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br>
            <small>Data de criação: {{date}}</small>
            <br><a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-2">Editar Categoria</button></a>
            <br><form action="/admin/categorias/deletar" method="POST" class="mt-2">
                <input type="hidden" name="id" value="{{_id}}">
               <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}

<h4>Nenhuma categoria Registrada</h4>

{{/each}}



