<h1>Nova Postagem</h1>

<div class="card">
    <div class="card-body">
<form action = "/admin/postagens/nova"method="POST">
<label for="titulo">Titulo:</label>
<input type="text"  name="titulo" class="form-control" placeholder="Titulo da Postagem" required>
<label for="slug">Slug:</label>
<input type="text"  name="slug" class="form-control" placeholder="Slug da Postagem" required>
<label for="descricao">Descrição:</label>
<input type="text"  name="descricao" class="form-control" placeholder="Descrição da Postagem" required >
<label for="conteudo">Conteúdo</label>
<textarea name="conteudo" class="form-control" required></textarea>
<label for="categoria"></label>
<select name="categoria" class="custom-select" >
    {{#each categorias}}
    <option value="{{_id}}">{{nome}}</option>
    {{else}}
    <option value="0">Nenhuma Categoria registrada</option>
    {{/each}}
</select>
<button type="submit" class="btn btn-success mt-3">Criar Postagem</button>
</form>
    </div>
</div>