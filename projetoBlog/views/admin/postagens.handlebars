<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success mb-3"> Nova Postagem</button></a>

{{#each postagens}}

<div class="card mb-3">
    <div class="card-body ">
        <h4>{{titulo}}</h4>
        <p> {{descricao}}</p>
        <p>{{conteudo}}</p>
        <small>Data: {{date}}</small><br>
        <small>Categoria: {{categoria.nome}}</small>
        <br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a><br>
       <form action="/admin/postagens/deletar" method="POST" class="mt-2">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar Postagem</button>
        </form>

    </div>
</div>

{{else}}

<h4 class="mt-3">NÃ£o existem Postagens para a listagem.</h4>

{{/each}}