<h1>Editar Postagem</h1>

<div class="card">
    <div class="card-body">
<form action = "/admin/postagens/edit" method="POST">
<input type="hidden" name="id" value="{{postagem._id}}"></input>
<label for="titulo">Titulo:</label>
<input type="text"  name="titulo" class="form-control" placeholder="Titulo da Postagem" value="{{postagem.titulo}}" required>
<label for="slug">Slug:</label>
<input type="text"  name="slug" class="form-control" placeholder="Slug da Postagem" value="{{postagem.slug}}"required>
<label for="descricao">Descrição:</label>
<input type="text"  name="descricao" class="form-control" placeholder="Descrição da Postagem" value="{{postagem.descricao}}" required >
<label for="conteudo">Conteúdo</label>
<textarea name="conteudo" class="form-control"required>{{postagem.conteudo}}</textarea>
<label for="categoria">Categorias:</label>
<select name="categoria" class="custom-select" >
    {{#each categorias}}
    <option value="{{_id}}">{{nome}}</option>
    {{else}}
    <option value="0">Nenhuma Categoria registrada</option>
    {{/each}}
</select>
<button type="submit" class="btn btn-success mt-3">Editar Postagem</button>
</form>
    </div>
</div>